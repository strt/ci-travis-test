{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "environment": [
        {
          "name": "MYSQL_DATABASE",
          "value": "homestead"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "secret"
        },
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "secret"
        },
        {
          "name": "MYSQL_USER",
          "value": "homestead"
        }
      ],
      "essential": true,
      "image": "mysql:5.7",
      "memory": 400,
      "links": [
        "php"
      ],
      "mountPoints": [
        {
          "containerPath": "/var/lib/mysql",
          "sourceVolume": "Db"
        }
      ],
      "name": "mysql",
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 3306
        }
      ]
    },
    {
      "essential": true,
      "image": "nginx:1.15-alpine",
      "memory": 64,
      "links": [
        "php"
      ],
      "mountPoints": [
        {
          "containerPath": "/var/www",
          "sourceVolume": "Data"
        },
        {
          "containerPath": "/etc/nginx/conf.d/default.conf",
          "sourceVolume": "_Default_Conf"
        }
      ],
      "name": "nginx"
    },
    {
      "environment": [
        {
          "name": "EMAIL",
          "value": "dangodiac@gmail.com"
        },
        {
          "name": "CERTS",
          "value": "localhost"
        }
      ],
      "essential": true,
      "image": "bradjonesllc/docker-nginx-letsencrypt",
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/etc/letsencrypt",
          "sourceVolume": "SrvLetsencrypt"
        },
        {
          "containerPath": "/etc/nginx/conf.d/default.conf",
          "sourceVolume": "SrvDockerNginx-Proxy_Conf"
        },
        {
          "containerPath": "/etc/ssl/dhparam",
          "sourceVolume": "SrvDhparam"
        }
      ],
      "name": "nginx-proxy",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        },
        {
          "containerPort": 443,
          "hostPort": 443
        }
      ]
    },
    {
      "essential": true,
      "image": "strateg/php:7.2-dev",
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/var/www",
          "sourceVolume": "Data"
        }
      ],
      "name": "php"
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "/srv/letsencrypt"
      },
      "name": "SrvLetsencrypt"
    },
    {
      "host": {
        "sourcePath": "/var/app/current/nginx-proxy.conf"
      },
      "name": "SrvDockerNginx-Proxy_Conf"
    },
    {
      "host": {
        "sourcePath": "/srv/dhparam"
      },
      "name": "SrvDhparam"
    },
    {
      "host": {
        "sourcePath": "/var/app/current/"
      },
      "name": "Data"
    },
    {
      "host": {
        "sourcePath": "/var/app/current/default.conf"
      },
      "name": "_Default_Conf"
    },
    {
      "host": {
        "sourcePath": "/srv/mysql"
      },
      "name": "Db"
    }
  ]
}
